<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Reviews</title>
    <style>
        /* Google Fonts Import */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');

        /* Main Body Styling */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 40px 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Reviews Section Container */
        .reviews-section {
            width: 100%;
            max-width: 1200px;
            text-align: center;
        }

        /* Section Title */
        .reviews-section h2 {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 40px;
            color: #212529;
        }

        /* Grid container for the review cards */
        .reviews-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
            justify-content: center;
        }

        /* Individual Review Card */
        .review-card {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            padding: 30px;
            text-align: left;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-top: 4px solid #0d6efd;
            display: flex;
            flex-direction: column;
        }

        .review-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
        }

        /* Comment Styling */
        .review-card .comment {
            font-style: italic;
            color: #495057;
            margin: 15px 0;
            line-height: 1.6;
            flex-grow: 1; /* Allows comment to fill space */
        }
        
        /* Dashed line quote styling */
        .review-card .comment::before {
            content: 'â€œ';
            font-size: 2rem;
            font-weight: bold;
            color: #0d6efd;
            margin-right: 5px;
        }

        /* Client Name Styling */
        .review-card .client-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: #0d6efd;
            margin-top: auto; /* Pushes the name to the bottom */
        }

        /* Canvas element for stars */
        .rating-canvas {
            height: 25px;
            width: 140px;
        }

    </style>
</head>
<body>

    <!-- ======================= Client Review Section ======================= -->
    <section class="reviews-section">
        <h2>What Our Clients Say</h2>
        <div class="reviews-container" id="reviews-container">
            <!-- Reviews will be dynamically loaded here by JavaScript -->
        </div>
    </section>
    <!-- ===================================================================== -->

    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // --- Your Client Review Data ---
            // To add a new review, just copy a block and change the details.
            const reviews = [
                {
                    client: "Rohit",
                    rating: 5,
                    comment: "The level of professionalism and the quality of the final product were simply outstanding. They exceeded all our expectations."
                },
                {
                    client: "Samarth",
                    rating: 5,
                    comment: "An incredible team that is both creative and efficient. They listened to our vision and brought it to life beautifully."
                },
                {
                    client: "Miraj",
                    rating: 4,
                    comment: "We are very pleased with the results. Communication was consistent and they were quick to adapt to feedback."
                },
            ];

            const reviewsContainer = document.getElementById('reviews-container');
            const starColorFilled = "#FFD700"; // Gold color for filled stars
            const starColorEmpty = "#E0E0E0"; // Light gray for empty stars

            /**
             * Draws a single star on a canvas context.
             * @param {CanvasRenderingContext2D} ctx - The canvas rendering context.
             * @param {number} cx - Center X coordinate.
             * @param {number} cy - Center Y coordinate.
             * @param {number} spikes - Number of spikes on the star.
             * @param {number} outerRadius - Outer radius of the star.
             * @param {number} innerRadius - Inner radius of the star.
             * @param {string} color - The fill color of the star.
             */
            function drawStar(ctx, cx, cy, spikes, outerRadius, innerRadius, color) {
                let rot = Math.PI / 2 * 3;
                let x = cx;
                let y = cy;
                let step = Math.PI / spikes;

                ctx.beginPath();
                ctx.moveTo(cx, cy - outerRadius);
                for (let i = 0; i < spikes; i++) {
                    x = cx + Math.cos(rot) * outerRadius;
                    y = cy + Math.sin(rot) * outerRadius;
                    ctx.lineTo(x, y);
                    rot += step;

                    x = cx + Math.cos(rot) * innerRadius;
                    y = cy + Math.sin(rot) * innerRadius;
                    ctx.lineTo(x, y);
                    rot += step;
                }
                ctx.lineTo(cx, cy - outerRadius);
                ctx.closePath();
                ctx.fillStyle = color;
                ctx.fill();
            }

            // Generate a review card for each item in the reviews array
            reviews.forEach(review => {
                const card = document.createElement('div');
                card.className = 'review-card';

                const canvas = document.createElement('canvas');
                canvas.className = 'rating-canvas';
                // Set canvas dimensions for high-DPI screens
                const dpr = window.devicePixelRatio || 1;
                canvas.width = 140 * dpr;
                canvas.height = 25 * dpr;

                const ctx = canvas.getContext('2d');
                ctx.scale(dpr, dpr); // Scale the context to ensure crisp drawing

                // Draw the stars based on the rating
                for (let i = 0; i < 5; i++) {
                    const starX = 15 + (i * 28); // Position each star
                    const starY = 12.5;
                    const color = i < review.rating ? starColorFilled : starColorEmpty;
                    drawStar(ctx, starX, starY, 5, 12, 6, color);
                }

                // Set the inner HTML of the card
                card.innerHTML = `
                    ${canvas.outerHTML}
                    <p class="comment">${review.comment}</p>
                    <p class="client-name">- ${review.client}</p>
                `;

                reviewsContainer.appendChild(card);
            });
        });
    </script>
</body>
</html>
